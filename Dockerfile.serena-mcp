FROM python:3.11-slim

# 作業ディレクトリを設定
WORKDIR /app

# 必要なパッケージをインストール（最小限）
RUN apt-get update && apt-get install -y \
    git \
    curl \
    gnupg \
    wget \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Node.jsとnpmをインストール
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Java 11をインストール（より軽量）
RUN apt-get update && apt-get install -y \
    openjdk-11-jdk-headless \
    && rm -rf /var/lib/apt/lists/*

# Python依存関係をインストール
COPY requirements-serena.txt .
RUN pip install --no-cache-dir -r requirements-serena.txt

# TypeScript Language Serverをインストール
RUN npm install -g typescript typescript-language-server

# Java Language Serverをインストール
RUN npm install -g java-language-server

# Serena MCPサーバーのコードをコピー
COPY serena-mcp-server.py .

# エントリポイントスクリプトを作成
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# 環境変数を設定
ENV PYTHONPATH=/app
ENV SERENA_API_KEY=""
ENV SERENA_MODEL="gpt-4o-mini"
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
ENV PATH="/usr/local/bin:/usr/bin:/bin:$PATH"

# ポートを公開
EXPOSE 8080

# サーバーを起動
CMD ["python", "serena-mcp-server.py"]
